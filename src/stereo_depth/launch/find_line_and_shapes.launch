    <!-- 执行 YOLOv8 目标检测 -->
    <!-- 新增参数需要对应修改yolo_wrapper.sh -->
    <node pkg="yolo_bridge" type="mask_wrapper.sh" name="mask_detector" output="log" launch-prefix="bash" >
        <param name="detect_mode" value="4" />
        <param name="top_k" value="3" />
        <param name="visualization" value="0" />
        <param name="conf_thre" value="0.2" />
        <param name="detc_type" value="quartiles" />
        <param name="output_type" value="0"/>    
    </node>

    <!-- 目标点空间定位 -->
    <node pkg="stereo_depth" type="line_detection_v3.py" name="line_location" output="screen" >
        <param name="is_visual" value="0"/>
    </node>
 
    
    <!-- 1：shapes, 2:holes, 3:balls-->
    <!-- 0代表关闭，1代表开启-->
    <!-- confidence threshold -->
    <!-- center, bbox -->
    <node pkg="yolo_bridge" type="yolo_wrapper.sh" name="yolov8_detector" output="log" launch-prefix="bash" >
        <param name="detect_mode" value="1" />      
        <param name="top_k" value="3" />
        <param name="visualization" value="0" />    
        <param name="conf_thre" value="0.2" />      
        <param name="detc_type" value="center" />   
    </node>

    <!-- 目标点空间定位 -->
    <!-- water or air -->
    <!-- 0代表关闭，1代表开启-->
    <!-- confidence threshold -->
    <node pkg="stereo_depth" type="basic_detection.py" name="object_detection_locate" output="screen" >
        <param name="exp_env" value="water" />        
        <param name="visualization" value="0" />    
        <param name="conf_thre" value="0.5" />       
    </node> 


</launch>

